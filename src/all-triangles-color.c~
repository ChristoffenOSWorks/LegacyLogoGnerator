/*
 * This is a Christoffen C specification file.
 *
 * All code here is written by me, MGage Morgan, on the weekend of 1/2/2015.
 *
 * The Christoffen C is written in and compiled by the C programming language.
 * It is generated by the libcairo2 2D graphics library.
 *
 * Got it working on Ubuntu 15.04 "Vivid Vervet."
 *
 * In order to do so, you need to use flags not defined on cairographics.org:
 *
 * You also need to include the direct path to the cairo.h file, for example:
 * #include "/usr/include/cairo/cairo.h"
 *
 * This software was compiled by Gage Morgan on October 3, 2015.
 * Thanks for support @ Christoffen Corporation.
*/ 

#include "/usr/include/cairo/cairo.h"

int
main (int argc, char *argv[])
{
        cairo_surface_t *surface =
            cairo_image_surface_create (CAIRO_FORMAT_ARGB32, 421, 410);
        cairo_t *cr =
            cairo_create (surface);

	cairo_surface_t *one;
	cairo_surface_t *two;
	cairo_surface_t *three;
	cairo_surface_t *four;
	cairo_surface_t *five;
	cairo_surface_t *six;
	cairo_surface_t *seven;

	cairo_push_group (cr);
	one = cairo_image_surface_create_from_png ("../images/triangle1-color.png");
	cairo_pop_group_to_source (cr);

	cairo_push_group (cr);
	two = cairo_image_surface_create_from_png ("../images/triangle2-color.png");
	cairo_pop_group_to_source (cr);

	cairo_push_group (cr);
	three = cairo_image_surface_create_from_png ("../images/triangle3-color.png");
	cairo_pop_group_to_source (cr);

	cairo_push_group (cr);
	four = cairo_image_surface_create_from_png ("../images/triangle4-color.png");
	cairo_pop_group_to_source (cr);

	cairo_push_group (cr);
	five = cairo_image_surface_create_from_png ("../images/triangle5-color.png");
	cairo_pop_group_to_source (cr);

	cairo_push_group (cr);
	six = cairo_image_surface_create_from_png ("../images/triangle6-color.png");
	cairo_pop_group_to_source (cr);

	cairo_push_group (cr);
	seven = cairo_image_surface_create_from_png ("../images/triangle7-color.png");
	cairo_pop_group_to_source (cr);

	cairo_set_source_surface (cr, one, 0, 0);
	cairo_paint (cr);
	cairo_set_source_surface (cr, two, 0, 0);
	cairo_paint (cr);
	cairo_set_source_surface (cr, three, 0, 0);
	cairo_paint (cr);
	cairo_set_source_surface (cr, four, 0, 0);
	cairo_paint (cr);
	cairo_set_source_surface (cr, five, 0, 0);
	cairo_paint (cr);
	cairo_set_source_surface (cr, six, 0, 0);
	cairo_paint (cr);
	cairo_set_source_surface (cr, seven, 0, 0);
	cairo_paint (cr);

	cairo_surface_destroy (one);
	cairo_surface_destroy (two);
	cairo_surface_destroy (three);
	cairo_surface_destroy (four);
	cairo_surface_destroy (five);
	cairo_surface_destroy (six);
	cairo_surface_destroy (seven);

	cairo_select_font_face (cr, "Martel Sans", CAIRO_FONT_SLANT_NORMAL, CAIRO_FONT_WEIGHT_BOLD);
        cairo_set_font_size (cr, 97.0);
        cairo_set_source_rgb (cr, 0.50, 0.50, 0.50);
        cairo_move_to (cr, 20.0, 800.0);
        cairo_show_text (cr, "C H R I S T O F F E N");

        cairo_select_font_face (cr, "Martel Sans", CAIRO_FONT_SLANT_NORMAL, CAIRO_FONT_WEIGHT_BOLD);
        cairo_set_font_size (cr, 97.0);
        cairo_set_source_rgb (cr, 0.5, 0.5, 0.5);
        cairo_move_to (cr, 10.0, 900.0);
        cairo_show_text (cr, "C O R P O R A T I O N");


	/* Write output and clean up */
        cairo_surface_write_to_png (surface, "../images/crstfn-color.png");
        cairo_destroy (cr);
        cairo_surface_destroy (surface);

        return 0;
}



